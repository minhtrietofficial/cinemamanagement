                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row justify-content-center">
            <h1 class="text-center">cập nhật</h1>
            <div class="wrapper">
                
                {{#each movie}}
                    <form class="form" action="">
                        <div class="form-group">
                            <label for="tenphim">Tên phim</label>
                            <input class="input" type="text" id="tenphim" value="{{TenPhim}}">
                        </div>

                        <div class="form-group">
                            <label for="daodien">Đạo diễn</label>
                            <input class="input" type="text" name="" id="daodien" value="{{DaoDien}}">
                        </div>

                        <div class="form-group">
                            <label for="theloai">Thể loại</label>
                            <input class="input" type="text" name="" id="theloai" value="{{TheLoai}}">
                        </div>

                        <div class="form-group">
                            <label for="nhaphathanh">Nhà phát hành</label>
                            <input class="input" type="text" name="" id="nhaphathanh" value="{{NhaPhatHanh}}">
                        </div>

                        <div class="form-group">
                            <label for="khoichieu">Khởi chiếu</label>
                            <input class="input" type="date" name="" id="khoichieu" value="{{KhoiChieu}}">
                        </div>

                        <div class="form-group">
                            <label for="ketthuc">Kết thúc</label>
                            <input class="input" type="date" id="ketthuc" value="{{KetThuc}}">
                        </div>

                        <div class="form-group">
                            <label for="thoiluong">Thời lượng</label>
                            <input class="input" type="text" name="" id="thoiluong" value="{{ThoiLuong}}">
                        </div>

                        <div class="form-group">
                            <label for="ngonngu">Ngôn ngữ</label>
                            <input class="input" type="text" name="" id="ngonngu" value="{{NgonNgu}}">
                        </div>

                        <div class="form-group">
                            <label for="rated">Giới hạn đối tượng</label>
                            <input class="input" type="text" name="" id="rated" value="{{Rated}}">
                        </div>

                        <div class="form-group">
                            <label for="nsx">Năm sản xuất</label>
                            <input class="input" type="text" name="" id="nsx" value="{{NSX}}">
                        </div>
                        <div>
                            <img src="/images/{{IDPhim}}.png" alt="" style="width: 100px;height: 100px">
                        </div>
                        <div class="form-group">
                            <label for="nsx">Hình</label>
                            <input class="input" type="file" name="" id="file">
                        </div>
                    </form>
                    <div id="message" style="display: none"></div>
                    <div>
                        <button class="btn_Update" onclick="updateMovie({{IDPhim}})">Cập nhật</button>
                        <button class="btn_Cancle" onclick="cancelUpdate()">Hủy</button>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</body>
<script src="/javascripts/nhanvien.js"></script>
</html>