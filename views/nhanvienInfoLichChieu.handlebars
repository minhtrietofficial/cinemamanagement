                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row justify-content-center">
            <div class="d-flex justify-content-center m-3">
                <h1>Chi tiết</h1>
            </div>
            <div class="wrapper border border-success">
                <form class="form" action="">

                    <div class="form-group">
                        <label for="">Phim</label>
                        <select class="form-control" name="" id="phim">
                            {{#each lichchieu}}
                            <option value="{{IDPhim}},{{TenPhim}}">{{TenPhim}}</option>
                            {{/each}}
                            {{#each phim}}
                            <option value="{{IDPhim}},{{TenPhim}}">{{TenPhim}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">

                        <label for="">Phòng chiếu</label>
                        <select class="form-control" name="" id="phongchieu">
                            {{#each lichchieu}}
                            <option value="{{IDPhongChieu}},{{TenPhongChieu}}">{{TenPhongChieu}}</option>
                            {{/each}}
                            {{#each phongchieu}}
                            <option value="{{IDPhongChieu}},{{TenPhongChieu}}">{{TenPhongChieu}}</option>
                            {{/each}}
                        </select>
                    </div>


                    <div class="form-group">
                        {{#each lichchieu}}


                        <label for="">Thời gian bắt đầu</label>
                        <input class="form-control" type="time" name="" id="thoigianbatdau" value="{{ThoiGianBatDau}}">
                    </div>

                    <div class="form-group">
                        <label for="">Thời gian kết thúc</label>
                        <input class="form-control" type="time" name="" id="thoigianketthuc"
                            value="{{ThoiGianketThuc}}">
                    </div>
                    <div class="form-group">

                        <label for="">Ngày Chiếu</label>
                        <input class="form-control" type="date" name="" id="ngaychieu" value="{{NgayChieu}}">
                    </div>

                    <div class="form-group">

                        <label for="">Giá vé</label>
                        <input class="form-control" type="number" name="" id="giave" value="{{GiaVe}}">

                    </div>





                    <div class="form-group">
                        <label for="">Hình thức</label>
                        <select class="form-control" name="" id="hinhthuc">
                            <option value="2D">2D</option>
                            <option value="3D">3D</option>
                            <option value="4DX">4DX</option>
                            <option value="IMAX">IMAX</option>

                        </select>
                    </div>
                    {{/each}}
                </form>
                <div class="form-group d-flex justify-content-end">
                    <button class="btn btn-warning m-2"
                        onclick="updateLichChieu({{#each lichchieu}}{{IDLichChieu}},{{IDPhongChieu}}{{/each}})">Cập
                        nhật</button>
                    <button class="btn btn-danger m-2" onclick="cancelUpdateLichChieu()">Hủy</button>
                </div>
                <div id="message" style="display: none"></div>
            </div>
        </div>

    </div>

</body>
<script src="/javascripts/nhanvien.js"></script>

</html>