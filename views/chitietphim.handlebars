                    </li> --}}

                </ul>
            </div>
        </div>
    </nav><div class="container d-flex justify-content-center">
    
    <div class="card mt-3" id="movieInfo" style="max-width: 1000px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="/images/{{IDPhim}}.png" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{TenPhim}}</h5>
                    <p class="card-text">Thể loại: {{TheLoai}}</p>
                    <p class="card-text">Rated: {{Rated}}</p>
                    <p class="card-text">Nhà phát hành: {{NhaPhatHanh}}</p>
                    <p class="card-text">Năm sản xuất: {{NSX}}</p>

                    <p class="card-text">Khởi Chiếu: {{KhoiChieu}}</p>
                    <button class="btn btn-danger" onclick="lichchieu({{IDPhim}})">Đặt vé</button>
                    <p class="card-text"><small class="text-muted"> </small></p>
                </div>
            </div>
        </div>
    </div>


    {{/each}}
</div>
