    <div class="container mt-3">
        <div class="d-flex justify-content-center m-3">
            <h1>Danh sách lịch chiếu</h1>
        </div>
        <div class="d-flex justify-content-end m-3">

            <a class="btn btn-primary btn-lg" href="/nhanvien/lichchieu/add">Thêm lịch chiếu</a>


        </div>

        <table class="table table-striped m-3">
            <thead class="text-center">
                <th>ID</th>
                <th>Phim</th>
                <th>Ngày chiếu</th>
                <th>Thời gian bắt đầu</th>
                <th>Thời gian kết thúc</th>
                <th>Phòng chiếu</th>
                <th>Giá vé</th>
                <th></th>
            </thead>
            <tbody id="lichchieu" class="text-center">
                {{#each lichchieu}}
                <tr>
                    <td onclick="informationLichChieuPage({{IDLichChieu}})">{{IDLichChieu}}</td>
                    <td onclick="informationLichChieuPage({{IDLichChieu}})">{{TenPhim}}</td>
                    <td onclick="informationLichChieuPage({{IDLichChieu}})">{{NgayChieu}}</td>
                    <td onclick="informationLichChieuPage({{IDLichChieu}})">{{ThoiGianBatDau}}</td>
                    <td onclick="informationLichChieuPage({{IDLichChieu}})">{{ThoiGianketThuc}}</td>
                    <td onclick="informationLichChieuPage({{IDLichChieu}})">{{TenPhongChieu}}</td>
                    <td onclick="informationLichChieuPage({{IDLichChieu}})">{{price GiaVe}} VNĐ</td>
                    <td><button class="btn btn-danger" onclick="modalLichChieuConfirm({{IDLichChieu}})">Delete</button>
                    </td>

                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>

